<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_header_height"
    android:padding="@dimen/nav_drawer_header_padding"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nav_drawer_header_margin"
        android:layout_marginLeft="@dimen/nav_drawer_header_margin"
        android:layout_marginTop="@dimen/nav_drawer_header_margin"
        android:textSize="@dimen/nav_drawer_header_size"
        android:textColor="@color/dark_gray"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:singleLine="true"
		android:textStyle="bold" />
    
</RelativeLayout>