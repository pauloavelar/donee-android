<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ns_menu_row"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_item_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/icon"
        android:contentDescription="@null"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/nav_drawer_icon_size"
        android:layout_height="@dimen/nav_drawer_icon_size"
        android:layout_marginLeft="@dimen/nav_drawer_icon_margin"
        android:layout_marginStart="@dimen/nav_drawer_icon_margin" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="@dimen/nav_drawer_counter_size"
        android:layout_height="@dimen/nav_drawer_counter_size"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/white"
        android:background="@drawable/counter_bg"
        android:textSize="@dimen/nav_drawer_counter_text_size"
        android:layout_marginEnd="@dimen/nav_drawer_counter_margin"
        android:layout_marginRight="@dimen/nav_drawer_counter_margin" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_drawer_title_margin"
        android:layout_marginStart="@dimen/nav_drawer_title_margin"
        android:textColor="@color/dark_gray"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:layout_toLeftOf="@id/counter"
        android:layout_toStartOf="@id/counter"
        android:textSize="@dimen/nav_drawer_title_size" />

    <View
        android:id="@+id/view_selected"
        android:layout_width="@dimen/nav_drawer_selected_width"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/donee_green" />

</RelativeLayout>